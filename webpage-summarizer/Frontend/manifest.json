{
  "manifest_version": 3,
  "name": "Webpage Summarizer",
  "description": "Summarize current webpage using AI",
  "version": "1.0",
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": ["http://localhost:8080/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
